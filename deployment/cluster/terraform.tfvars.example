# Proxmox Configuration
proxmox_endpoint = "https://proxmox-host:8006/api2/json"
proxmox_node     = "proxmox-node"

# Cluster Configuration
cluster_name = "talos-cluster"

# Node Counts
control_plane_count = 1  # 3 for HA setup
worker_count       = 3

# Network Configuration
default_gateway      = "10.10.11.1"
ip_range_start      = "10.10.11.10"  # First node will get this IP
ip_range_end        = "10.10.11.50"  # For validation/documentation
network_cidr        = "24"
hypervisor_ipv6_subnet = "2001:db8::/64"

# Control Plane Node Specs
cp_cpu_cores    = 2
cp_memory_mb    = 4096
cp_disk_size_gb = 20

# Worker Node Specs  
worker_cpu_cores    = 4
worker_memory_mb    = 8192
worker_disk_size_gb = 50

# Infrastructure
datastore_id   = "local-lvm-thin"
network_bridge = "vmbr0"
