{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["database", "gateway", "issuer", "prometheus"],
  "properties": {
    "database": {
      "type": "object",
      "required": ["cpu", "memory", "postgresVersion", "replicas", "size"],
      "properties": {
        "cpu": { "type": "string" },
        "memory": { "type": "string" },
        "postgresVersion": { "type": "string" },
        "replicas": { "type": "integer" },
        "size": { "type": "string" }
      }
    },
    "gateway": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "issuer": {
      "type": "string"
    },
    "prometheus": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    }
  }
}
