{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["database", "gateway", "issuer", "prometheus"],
  "properties": {
    "database": {
      "type": "object",
      "required": ["postgresVersion", "replicas"],
      "properties": {
        "postgresVersion": {
          "type": "string"
        },
        "replicas": {
          "type": "integer"
        }
      }
    },
    "gateway": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "issuer": {
      "type": "string"
    },
    "prometheus": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    }
  }
}
