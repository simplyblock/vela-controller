{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["database", "gateway", "issuer", "prometheus"],
  "properties": {
    "database": {
      "type": "object",
      "required": ["postgresVersion", "replicas"],
      "properties": {
        "postgresVersion": {
          "type": "string"
        },
        "replicas": {
          "type": "integer"
        }
      }
    },
    "gateway": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    },
    "issuer": {
      "type": "string"
    },
    "db": {
      "type": "object",
      "properties": {
        "service": {
          "type": "object",
          "properties": {
            "externalEnabled": {
              "type": "boolean",
              "description": "Expose the Postgres service externally. Disable for clusters without external IPv6 support."
            }
          }
        }
      }
    },
    "prometheus": {
      "type": "object",
      "required": ["name", "namespace"],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      }
    }
  }
}
