{
    "id": "vela",
    "realm": "vela",
    "enabled": true,
    "registrationAllowed": true,
    "registrationEmailAsUsername": true,
    "verifyEmail": false,
    "eventsEnabled": true,
    "adminEventsEnabled": true,
    "users": [
        {
            "username": "testuser",
            "enabled": true,
            "email": "testuser@example.com",
            "firstName": "Test",
            "lastName": "User",
            "emailVerified": true,
            "credentials": [
                {
                    "type": "password",
                    "value": "testpassword",
                    "temporary": false
                }
            ]
        },
        {
            "username": "service-account-controller",
            "emailVerified": false,
            "enabled": true,
            "serviceAccountClientId": "controller",
            "realmRoles": [
                "default-roles-vela"
            ],
            "clientRoles": {
                "realm-management": [
                    "manage-users",
                    "query-users",
                    "view-users"
                ]
            }
        }
    ],
    "clients": [
        {
            "clientId": "{{ .Values.studio.env.VELA_PLATFORM_KEYCLOAK_CLIENT_ID }}",
            "name": "Frontend Application",
            "enabled": true,
            "redirectUris": [
                "https://{{ .Values.domain }}:{{ .Values.port }}/api/auth/callback/keycloak"
            ],
            "webOrigins": [
                "https://{{ .Values.domain }}:{{ .Values.port }}"
            ],
            "standardFlowEnabled": true,
            "directAccessGrantsEnabled": true,
            "publicClient": false,
            "secret": "{{ .Values.studio.env.VELA_PLATFORM_KEYCLOAK_CLIENT_SECRET }}",
            "protocol": "openid-connect",
            "attributes": {
                "access.token.lifespan": "3600"
            }
        },
        {
            "clientId": "controller",
            "name": "Vela controller",
            "enabled": true,
            "redirectUris": [
                "http://localhost:8000/*"
            ],
            "webOrigins": [
                "http://localhost:8000/*"
            ],
            "standardFlowEnabled": true,
            "directAccessGrantsEnabled": true,
            "publicClient": false,
            "secret": "controller-secret",
            "protocol": "openid-connect",
            "serviceAccountsEnabled": true,
            "defaultClientScopes": [
                "service_account",
                "web-origins",
                "acr",
                "roles",
                "profile",
                "basic",
                "email"
            ]
        }
    ]
}
